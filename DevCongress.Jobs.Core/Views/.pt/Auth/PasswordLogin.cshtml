@model DevCongress.Jobs.Core.ViewModels.Auth.PasswordLoginViewModel

@{
  Layout = "_MainLayout";
  ViewData["Title"] = "Login";
}

<div class="content">
  <div class="container">

    <div class="row">
      <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">

        <form method="post" asp-route="login">
          <div class="card card-login card-hidden">
            <div class="card-header text-center" data-background-color="rose">
              <h4 class="card-title">Login</h4>
            </div>
            <div class="card-content">

              @await Html.PartialAsync("_Messages")

              <div class="input-group">
                <span class="input-group-addon">
                  <i class="material-icons">face</i>
                </span>
                <div class="form-group label-floating">
                  <label class="control-label">Username</label>
                  <input name="Username" type="text" value="@Model.Username" class="form-control" required="required">
                </div>
              </div>
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="material-icons">lock_outline</i>
                </span>
                <div class="form-group label-floating">
                  <label class="control-label">Password</label>
                  <input name="Password" type="password" class="form-control" required="required">
                </div>
              </div>

              <!--<div>
                <div class="checkbox form-horizontal-checkbox">
                  <label title="Remember login for one week">
                    <input type="checkbox" name="Remember" value="true" checked="@Model.Remember"> Remember Me
                  </label>
                </div>
              </div>-->
            </div>
            <div class="footer text-center">
              <button type="submit" class="btn btn-rose btn-simple btn-wd btn-lg">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
